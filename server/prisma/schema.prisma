generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

enum UserRole {
  USER 
  ADMIN
}

model User {
  id String @id @unique @default(uuid())
  name String
  email String
  image String?
  password String 
  token String?
  role UserRole @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}